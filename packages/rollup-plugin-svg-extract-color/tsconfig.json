{
  "compilerOptions": {
    "module": "ESNext",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "useDefineForClassFields": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "sourceMap": true,
    "baseUrl": ".",
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "paths": {
      "@/*": ["./app/*"],
      "@defineds/*": ["./app/defineds/*"],
      "@utils/*": ["./app/utils/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
